generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum role {
  USER
  ADMIN
}

enum availble {
  VACANT
  OCCUPIED
}

enum payment {
  ACCEPT
  REJECT
  PENDING
}

model User {
  id          Int       @id @default(autoincrement())
  password    String
  email       String    @unique
  firstName   String
  lastName    String
  status      role      @default(USER)
  phoneNumber String    @unique
  bookings    Booking[]
}

model RoomType {
  id         Int    @id @default(autoincrement())
  roomType   String
  guestLimit String
  roomPrice  String
  rooms      Room[]
}

model Room {
  id            Int       @id @default(autoincrement())
  roomNumber    String
  isMaintenance Boolean   @default(false)
  roomTypeId    Int
  roomType      RoomType  @relation(fields: [roomTypeId], references: [id])
  bookings      Booking[]
}

model Booking {
  id            Int      @id @default(autoincrement())
  extraBed      Int?     @default(0)
  createdAt     DateTime @default(now())
  isPayment     payment  @default(PENDING)
  startDate     DateTime @db.Date
  endDate       DateTime @db.Date
  roomAvailable availble @default(OCCUPIED)
  userId        Int
  totalPrice    Int
  usersId       User     @relation(fields: [userId], references: [id])
  roomId        Int
  roomsId       Room     @relation(fields: [roomId], references: [id])
}
